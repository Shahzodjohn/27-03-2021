@model ShopProject.Models.Category
@{
    ViewBag.Title = "Edit";
}
<form asp-action="Edit" asp-controller="Category">
    <div class="form-group">
        <label asp-for="Id" class="form-control">Id</label>
        <input readonly type="text" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="form-control">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-danger" />

    </div>

</form>
