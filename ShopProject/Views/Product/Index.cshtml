@model List<ShopProject.Models.Product>
@{
    ViewBag.Title = "Show all!";
}
<a class="btn btn-primary" asp-action="Create">Добавить</a>
<table class="table">
    <thead>

        <tr>
            <th>Id</th>
            <th>Shop</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>CategoryId</th>
            <th>InsertDate</th>
            <th>UpdateDate</th>
        </tr>
    </thead>
    <tbody>

       @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Shop</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Categories.Name</td>
                <td>@item.InsertDate</td>
                <td>@item.UpdateDate</td>
                <td>
                    <a href="~/Product/Edit?id=@item.Id">Изменить</a>
                    <a href="~/Product/Delete?id=@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>