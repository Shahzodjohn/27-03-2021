@model ShopProject.Models.Product
@{
    ViewBag.title = "Edit elements";
}
<form asp-action="Edit" asp-controller="Product">
    <div class="form-group">
        <label asp-for="Id" class="form-control">Id</label>
        <input readonly type="text" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Shop" class="form-control">Shop</label>
        <input type="text" asp-for="Shop" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductName" class="form-control">ProductName</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="form-control">Price</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="form-control">CategoryId</label>
        <select asp-for="CategoryId" class="form-control"  asp-items="ViewBag.CategoryId"></select>
    </div>
    <div class="form-group">
        <label asp-for="InsertDate" class="form-control">InsertDate</label>
        <input type="text" asp-for="InsertDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UpdateDate" class="form-control">UpdateDate</label>
        <input type="text" asp-for="UpdateDate" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-danger" />

    </div>

</form>
